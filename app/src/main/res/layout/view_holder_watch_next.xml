<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_medium_2"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_watch_next_image"
        android:layout_width="@dimen/watch_now_width"
        android:layout_height="@dimen/watch_now_height"
        android:layout_marginEnd="@dimen/margin_medium"
        android:scaleType="centerCrop"
        android:src="@drawable/watch_next_image" />

    <TextView
        android:id="@+id/tv_watch_next_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_watch_next_image"
        android:layout_alignEnd="@+id/iv_watch_next_image"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/transparent_black"
        android:padding="@dimen/margin_small"
        android:text="17:15"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_watch_next_speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_watch_next_image"
        android:text="Richard Seymor"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular_2x" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_watch_next_speaker"
        android:layout_below="@+id/tv_watch_next_speaker"
        android:text="How Beauty Feels"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_more_vert_black" />

</RelativeLayout>